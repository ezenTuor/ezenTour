<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="config.mybatis.mapper.oracle.support">
	<sql id="searchWhere">
		<if test="searchKeyword!=null and searchKeyword != ''">
			where ${searchCondition} like '%' || #{searchKeyword} || '%'
		</if>
	</sql>
	<select id="selectAll" parameterType="memberVo" resultType="supportVo">
		select *
		from
		(
		    select rownum as RNUM, A.*
		    from
		    (
		        select support_no,user_no,title,content,regdate,
		        		group_no,step,sort,asFlag
		        from support
				<include refid="searchWhere"></include>
		    )A
		)
		where RNUM > #{firstRecordIndex} 
		<![CDATA[
		and RNUM<= #{firstRecordIndex} + #{recordCountPerPage}
		]]>
	</select>
	<select id="selectTotalRecord" parameterType="memberVo" 
		resultType="int">
		select count(*) from support
		<include refid="searchWhere"></include>
	</select>
	<insert id="insertSupport" parameterType="supportVo">
		<selectKey	keyProperty="supportNo" resultType="int" order="BEFORE">
			select supprot_seq.nextval from dual
		</selectKey>
		insert into support(support_no,user_no,title,content)
		values(#{supportNo},#{userNo},#{title},#{content})
	</insert>
	<select id="selectSupportByNo" parameterType="int" resultType="supportVo">
		select * from support where support_no=#{supportNo}
	</select>
	<update id="editSupport" parameterType="supportVo">
		update support
		set title=#{title}, content=#{content}
	</update>
	<select id="selectByNo" parameterType="int" resultType="supportVo">
		select * from support
		where support_no = #{supportNo}
	</select>
</mapper>
